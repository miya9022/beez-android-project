<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/transparent" >

        <ImageView
            android:id="@+id/slidingmenu_item_thumb"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/slidingmenu_item_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="2dp"
            android:padding="2dp"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />
        

        <ToggleButton
            android:id="@+id/slidingmenu_item_toggle"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:background="@drawable/toggle_check"
            android:focusable="false"
            android:text="ToggleButton"
            android:textOff=""
            android:textOn="" />

        <!--<CheckBox
            android:id="@+id/slidingmenu_item_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:focusable="false" />-->
    </FrameLayout>

    <GridView
        android:id="@+id/app_domain_gv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" 
        android:background="@color/transparent"
        android:cacheColorHint="@color/white"
        android:divider="@color/lightGray">
    </GridView>

</LinearLayout>
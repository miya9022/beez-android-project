<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="@color/tab_slide_menu" />
         <gradient android:angle="-90" android:startColor="@color/tab_slide_menu" android:endColor="@color/tab_slide_menu"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="@color/tab_slide_menu" />
         <solid android:color="@color/tab_slide_menu"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="@color/tab_slide_menu" />
         <gradient android:angle="-90" android:startColor="@color/tab_slide_menu" android:endColor="@color/tab_slide_menu" />            
     </shape>
 </item>
</selector>